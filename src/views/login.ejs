<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row justify-content-center">

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Crie sua conta ou acesse</h1>
      <p class="text-center lead">Faça login ou crie uma conta.</p>
      <%- include('includes/messages') %>

      <!-- Linha que contém os dois formulários -->
      <div class="row">

        <!-- Cadastro -->
        <div class="col-md-6">
          <h4>Faça seu cadastro</h4>
          <p>Se ainda não possui uma conta, cadastre-se.</p>
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="form-group">
              <label>Endereço de E-mail</label>
              <input type="email" class="form-control my-2" name="email">
              <p class="email-notification alert-danger"> </p>
            </div>

            <div class="form-group">
              <label>Senha</label>
              <input type="password" class="form-control my-2" name="password">
            </div>

            <button type="submit" class="btn btn-primary my-2">Cadastrar</button>
          </form>
        </div>

        <!-- Login -->
        <div class="col-md-6">
          <h4>Faça login</h4>
          <p>Se possui uma conta, faça login.</p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-group">
              <label>Endereço de E-mail</label>
              <input type="email" class="form-control my-2" name="email">
            </div>

            <div class="form-group">
              <label>Senha</label>
              <input type="password" class="form-control my-2" name="password">
            </div>

            <button type="submit" class="btn btn-primary my-2">Entrar</button>
          </form>
        </div>

      </div>
    </div>

  </div>
</div>

<%- include('includes/footer') %>
